{
  "name": "@diplodoc/folding-headings-extension",
  "version": "0.1.2",
  "description": "Folding headings extension for Diplodoc platform ",
  "main": "build/plugin/index.js",
  "types": "build/plugin/index.d.ts",
  "engines": {
    "npm": ">=11.5.1"
  },
  "exports": {
    ".": {
      "types": "./build/plugin/index.d.ts",
      "default": "./build/plugin/index.js"
    },
    "./runtime": {
      "types": "./build/runtime/index.d.ts",
      "style": "./build/runtime/index.css",
      "default": "./build/runtime/index.js"
    },
    "./runtime/styles.css": "./build/runtime/index.css"
  },
  "homepage": "https://diplodoc.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diplodoc-platform/folding-headings-extension.git"
  },
  "bugs": {
    "url": "https://github.com/diplodoc-platform/diplodoc/issues"
  },
  "author": "",
  "license": "MIT",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:declarations": "tsc --emitDeclarationOnly --outDir ./build",
    "build:js": "node ./esbuild/build.mjs",
    "prepublishOnly": "npm run typecheck && npm run lint && npm test && npm run build",
    "test": "vitest run --config vitest.config.mjs",
    "test:watch": "vitest --config vitest.config.mjs",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.13.2",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/markdown-it": "^13.0.9",
    "markdown-it": "^13.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild-sass-plugin": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
